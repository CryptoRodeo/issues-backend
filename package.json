{
  "name": "konflux-issues-backend",
  "version": "1.0.0",
  "description": "Backend service for issues related to Konflux",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsup src/server.ts --out-dir dist --format esm --clean",
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@kubernetes/client-node": "^1.2.0",
    "@prisma/client": "^6.7.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-promise-router": "^4.1.1",
    "helmet": "^7.0.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.4",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "eslint": "^8.45.0",
    "jest": "^29.6.1",
    "prisma": "^6.7.0",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "tsup": "^8.4.0",
    "tsx": "^4.19.4",
    "typescript": "^5.1.6"
  }
}
